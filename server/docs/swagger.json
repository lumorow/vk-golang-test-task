    "definitions": {
        "entity.Actor": {
            "type": "object",
            "properties": {
                "birthday": {
                    "type": "string",
                    "example": "1990-01-01"
                },
                "name": {
                    "type": "string",
                    "example": "John Doe"
                },
                "sex": {
                    "type": "string",
                    "example": "male"
