        "entity.ActorFilms": {
            "type": "object",
            "properties": {
                "birthday": {
                    "type": "string"
                },
                "films": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/entity.Film"
                    }
                },
                "name": {
                    "type": "string"
                },
                "sex": {
                    "type": "string"
                }
            }
        },
        "entity.Film": {
            "type": "object",
            "properties": {
                "actorsId": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                },
                "description": {
                    "type": "string",
                    "example": "A mind-bending thriller"
                },
                "name": {
                    "type": "string",
                    "example": "Inception"
                },
                "rating": {
                    "type": "integer",
                    "maximum": 10,
                    "minimum": 0,
                    "example": 8
                },
                "releaseDay": {
                    "type": "string",
                    "example": "2010-07-16"
                }
            }
        },
        "entity.UpdateActorInput": {
            "type": "object",
            "properties": {
                "birthday": {
                    "type": "string",
                    "example": "1992-12-12"
                },
                "name": {
                    "type": "string",
                    "example": "John Doe"
                },
                "sex": {
                    "type": "string",
                    "example": "female"
                }
            }
        },
        "entity.UpdateFilmInput": {
            "type": "object",
            "properties": {
                "actorsId": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                },
                "description": {
                    "type": "string",
                    "example": "New description"
                },
                "name": {
                    "type": "string",
                    "example": "Inception"
                },
                "rating": {
                    "type": "integer",
                    "maximum": 10,
                    "minimum": 0,
                    "example": 6
                },
                "releaseDay": {
                    "type": "string",
                    "example": "2010-07-16"
                }
            }
        },
        "entity.User": {
            "type": "object",
            "properties": {
                "password": {
                    "type": "string",
                    "example": "strongPassword"
